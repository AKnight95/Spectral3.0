{% extends 'base.html.twig' %}

{% block title %}Personnages index{% endblock %}

{% block css %}
    <link rel="stylesheet" href="{{ asset('Css/personnages.css') }}">
{% endblock %}

{% block body %}

    <h1>Personnages index</h1>
    </br>
    </br>

    <section id="pagination_data" class="col-md-15">

        <div class="row">

            {% for personnage2 in personnages2s %}

                <article>
                    <h1>{{personnage2.Nom}}</h1>
                </article>

            {% endfor %}

        </div>

        

    </section>


    <a href="{{ path('app_personnages2_new') }}">Create new</a>

    <script>  
    $(document).ready(function(){  
        load_data();  
        function load_data(page)  
        {  
            $.ajax({  
                    url:"{{ path('ajax_personnages') }}",  
                    method:"POST",  
                    data:{page:page},  
                    success:function(data){  
                        $('#pagination_data').html(data);  
                    }  
            })  
        }  
        $(document).on('click', '.pagination_link', function(){  
            var page = $(this).attr("id");  
            load_data(page);  
        });  
    });  
    </script>  

{% endblock %}
